  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node Debug main.ts (in playground)",
      "protocol": "auto",
      "preLaunchTask": {
        "task": "${defaultBuildTask}",
        "type": "shell"
      },
      "runtimeExecutable": "node",
      "runtimeArgs": [
        // "-r",
        // "ts-node/register"
      ],
      "args": [
        "--inspect",
        "./src/test/playground/main.js"
      ],
      "cwd": "${workspaceFolder}/out",
      "env": {
        "NODE_ENV": "development"
      },
      "stopOnEntry": true,
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
