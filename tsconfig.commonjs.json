{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build/src",
    "tsBuildInfoFile": "./build/tmp/tsbuild.commonjs.info",
    "noEmit": false,
    "noEmitHelpers": false,
    /* Additional Vebosity */
    "diagnostics": true,
    "extendedDiagnostics": false,
    "listFiles": false,
    "listEmittedFiles": false,
    "traceResolution": false,
    /* Source Map Options */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declarationDir": "./build/lib/"
  }
}
