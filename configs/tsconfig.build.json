{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": true,
    "rootDir": "../src",
    "outDir": "../dist/src",
    "declarationDir": "../dist/typings",
    "incremental": true,
    "tsBuildInfoFile": "../dist/ts-build-info.lib",
  },
  "include": [
    "../src/**/*.ts",
  ],
  "exclude": [
    "../.git",
    "../.github",
    "../.vscode",
    "../**/__test__/**/*.*",
    "../**/node_modules",
    "../backup",
    "../build",
    "../configs",
    "../debug.js",
    "../enums",
    "../functional.js",
    "../keys",
    "../manualTestingAndDebug.js",
    "../misc",
    "../out",
    "../scripts",
    "../src/debug",
    "../src/other",
    "../src/test",
  ],
}
